{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Frontend",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}/frontend"
        },
        {
            "name": "MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_server.main",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": ".venv/bin/python"
        },
        {
            "name": "MCP Client",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_client.main",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": ".venv/bin/python"
        },
    ]
}